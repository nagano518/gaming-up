<%= form_with model: movie, local: true do |f|%>
  <div class="field">
    <%= f.label :movie_name, "動画の名称" %><br />
    <%= f.text_field :movie_name, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :movie_content, "動画の説明" %><br />
    <%= f.text_area :movie_content, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :video_top, "動画ファイルの挿入" %><br />
    <%= f.file_field :video_top, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    ゲームジャンルの選択
    <span class="indispensable">必須</span>
  </div>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"", id:""}) %>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>