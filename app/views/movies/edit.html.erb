<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">動画の情報を入力</h2>
    <%= form_with(model: @movie, local: true) do |f| %>
    <%# 動画ファイル %>
    <div class="img-upload">
      <div class="weight-bold-text">
        動画ファイル
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :video_top, id:"item-image" %>
      </div>
    </div>
    <%# /動画ファイル %>

    <%# 動画名と説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        動画名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :movie_name, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          動画の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :movie_content, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <%# /動画名と説明 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>
      <%=link_to 'もどる', movie_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>